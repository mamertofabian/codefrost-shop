{
  "name": "codefrost-shop",
  "version": "1.0.0",
  "description": "Complete MERN, Redux, Typescript eCommerce app",
  "main": "index.js",
  "scripts": {
    "start:build": "tsc -w",
    "server": "nodemon backend/build/server.js",
    "client": "yarn --cwd frontend start",
    "dev": "concurrently \"yarn run start:build\" \"yarn run server\" \"yarn run client\"",
    "data:import": "node backend/src/seeder",
    "data:destroy": "node backend/src/seeder -d"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mamertofabian/codefrost-shop.git"
  },
  "author": "Mamerto Fabian",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mamertofabian/codefrost-shop/issues"
  },
  "homepage": "https://github.com/mamertofabian/codefrost-shop#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "mongoose": "^5.11.18"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.11",
    "concurrently": "^6.0.0",
    "nodemon": "^2.0.7"
  }
}
